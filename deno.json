{
  "package_name": "Scoop Wrapper",
  "description": "A package wrap to scoop + scoop.sh = fast",
  "version": "0.0.1",
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build": "deno compile --output scoopf.exe --allow-env --allow-sys --allow-read --allow-run --allow-net main.ts",
    "release": "deno run --allow-all npm:bumpp deno.json"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "commander": "npm:commander@^12.1.0",
    "dayjs": "npm:dayjs@^1.11.12",
    "inquirer": "npm:inquirer@^10.1.8",
    "ora": "npm:ora@^8.0.1",
    "prompts": "npm:prompts@^2.4.2"
  }
}
